.welcome{
    max-width:500px;
    text-align:center;
    margin:0 auto;
    background:brandGreen;
    position:relative;
    min-width:80vw;
    @media(min-width:768px){
        min-width:30vw;
    }
    &:before{
        content: '';
        position:absolute;
        background:brandGreen;
        top:-50px;
        left:0;
        height:100px;
        width:100%;
        z-index:-1;
        transform:skewY(5deg);
    }
    &:after{
        content: '';
        position:absolute;
        background:brandGreen;
        bottom:-50px;
        left:0;
        height:100px;
        width:100%;
        z-index:-1;
        transform:skewY(5deg);
    }
    ul{
        list-style:none;
        margin:1rem 0;
        padding:0;
        display:inline-grid;
        grid-template-columns: repeat(3, 55px);
        grid-gap: 5px;
    }
    a{
        position:relative;
        font-size:4rem;
        width:40px;
        height:40px;
        display:inline-block;
        line-height:0;
        transition:0.5s linear;
        &:hover{
            transform:rotate(10deg);
        }
    }
}