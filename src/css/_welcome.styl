.welcome{
    max-width:500px;
    text-align:center;
    margin:0 auto;
    ul{
        list-style:none;
        margin:1rem 0;
        padding:0;
        display:inline-grid;
        grid-template-columns: repeat(3, 55px);
        grid-gap: 5px;
    }
    a{
        position:relative;
        font-size:4rem;
        width:40px;
        height:40px;
        display:inline-block;
        line-height:0;
        &:before{
            content: '';
            
        }
        &:hover{
            //color:#fff;
            &:before{
                opacity:1;
                border-radius:50%;
                position:absolute;
                top:50%;
                left:50%;
                z-index:-1;
                width:120%;
                height:120%;
                margin-left: -(@width / 1.85);
                margin-top: -(@height / 1.85);    
                border:2px dashed #123456;
                animation: spin 5s linear infinite;

            }
        }
    }
}