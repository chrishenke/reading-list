.quote{
    height:100vh;
    display: grid;
    place-items: center;
    place-content: center;
    grid-gap:20px;
    padding:2rem;
    color:#fff;
    text-align:center;
    background-color:rgba(0,0,0,0.5);
    &--text{
        font-size:4rem;
        letter-spacing:0.1em;
        font-weight:200;
    }
    &--author{
        font-size:2rem;
        letter-spacing:0.1em;
    }
}
